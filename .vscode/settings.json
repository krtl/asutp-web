{
    "deploy.reloaded": {
        "packages": [
            {
                "name": "asutp-web package",
                "files": [
                    "**/*.js",
                    "/*.json"
                ],
                "exclude": [
                    "tests/**",
                    "logs/**",
                    "node_modules/**",
                    "client/node_modules/**"
                ],                
                "ignore": [
                    "tests/**",
                    "logs/**",
                    "data/**",
                    "node_modules/**",
                    "client/node_modules/**"
                ],                
                
                "button": {
                    "text": "Deploy package to asutp-web'",
                    "tooltip": "Click here to deploy package to asutp-web server...",
                    "targets": [ "My network package folder" ]
                },
                "deployOnChange": false,
                "deployOnSave": false
            },
            {
                "name": "asutp-web data",
                "files": [
                    "data/imported_data/*.json"
                ],

                "button": {
                    "text": "Deploy data to asutp-web'",
                    "tooltip": "Click here to deploy data to asutp-web server...",
                    "targets": [ "My network data folder" ]
                },
                "deployOnChange": false,
                "deployOnSave": false
            }
        ],        
        "targets": [

            {
                "type": "local",
                "name": "My local folder",
                "description": "A local folder",

                "dir": "D:/test/asutp-web_package_files"
            },
            {
                "type": "local",
                "name": "My network package folder",
                "description": "package",

                "dir": "\\\\asutp-web\\d$\\\\javascript\\asutp-web-vs.code"
            },
            {
                "type": "local",
                "name": "My network data folder",
                "description": "data",

                "dir": "\\\\asutp-web\\d$\\\\javascript\\asutp-web-vs.code\\data\\imported_data"
            }
        ]
    }
}